{
  "name": "functions",
  "version": "1.0.0",
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "build": "tsc",
    "build2": "node ./esbuild.config.cjs",
    "build:watch": "tsc --watch",
    "serve": "yarn build2 && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "dist/index.js",
  "dependencies": {
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "esbuild": "^0.23.1",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "private": true
}
