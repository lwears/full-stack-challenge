{
  "name": "functions",
  "version": "1.0.0",
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "@custom/validators": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "@custom/validators": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "tsc && node ./esbuild.config.cjs",
    "build:watch": "esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --target=node16 --format=esm --external:./node_modules/* --log-level=info --tsconfig=./tsconfig.json --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.0.1",
    "validators": "workspace:^",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "esbuild": "^0.23.1",
    "firebase-functions-test": "^3.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "private": true
}
