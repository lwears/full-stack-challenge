{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "lib": [
            "es2022"
        ],
        "paths": {
            "validators": [
                "../../packages/validators"
            ]
        }
    },
    "references": [
        {
            "path": "../../packages/validators"
        }
    ],
    "exclude": [
        "**/dist",
        "**/node_modules"
    ]
}